@using GameZone.Settings;
@model CreateGameViewModel;
@{
    ViewData["Title"] = "Add Game";
}
<h5>
    <i class="bi bi-plus-circle-dotted"></i>
    Add Game
</h5>
<form asp-controller="Games" enctype="multipart/form-data">
    <!--enctype="multipart/form-data"  [without this attribute the file will not sent ]   null! -->
    <div class="row ">
        <!--Inputs-->
        <div class="col-md-6" >
            <div class="form-group">
                <label asp-for="Name" class="form-label mt-4"></label>
                <input type="text" class="form-control" asp-for="Name" placeholder="Game Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="form-label mt-4"></label>
                <select  class="form-select" asp-for="CategoryId" asp-items="Model.Categories"
                 data-placeholder="--Select Category--" data-minimum-results-for-search="Infinity">
                    <option value=""></option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedDevices" class="form-label mt-4"></label>
                <select class="form-select" asp-for="SelectedDevices" asp-items="Model.Devices"
                        data-placeholder="--Select Devices--" >
                    <option></option>
                </select>
                <span asp-validation-for="SelectedDevices" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="form-label mt-4"></label>
                <textarea type="text" class="form-control" asp-for="Description" placeholder="Game Description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cover" class="form-label mt-4"></label>
                <input type="file" class="form-control" asp-for="Cover" placeholder="Game Cover"
                  data-rule-extension="@FileSettings.AllowedExtentions.Replace(".",string.Empty)"
                       data-msg-extension="Not allowed extension"
                       data-rule-filesize="@FileSettings.MaxFileSizeInByte"
                       data-msg-filesize="Maximum size is @FileSettings.MaxFileSizeInMB MB">
                <small  class="form-text text-muted">only @FileSettings.AllowedExtentions files are allowed with max size @(FileSettings.MaxFileSizeInMB)MB.</small>
                <span asp-validation-for="Cover" class="text-danger d-block"></span>
            </div>
            <button type="submit" class="btn btn-light text-black mt-4">ADD</button>
        </div>
        <!--IMage-->
        <div class="col-md-6 d-flex justify-content-center mt-4 overflow-hidden" >
            <img class="cover-preview  d-none" alt="Cover" />
        </div>

    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/filesize-validator.js" asp-append-version="true"></script>
    <script src="~/js/addgame-form.js" asp-append-version="true"></script>
}
